<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="gestion_hopital.list">
      <field name="name">gestion_hopital list</field>
      <field name="model">gestion_hopital.patient</field>
      <field name="arch" type="xml">
        <tree>
          <field name="group"/>
          <field name="numero"/>
        </tree>
      </field>
    </record>
   

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="gestion_hopital.action_window">
      <field name="name">gestion_hopital window</field>
      <field name="res_model">gestion_hopital.patient</field>
      <field name="view_mode">tree,form</field>
    </record>
   

    <!-- server action to the one above -->
    
    <record model="ir.actions.server" id="gestion_hopital.action_server">
      <field name="name">gestion_hopital server</field>
      <field name="model_id" ref="model_gestion_hopital_patient"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
   

    <!-- Top menu item -->
    
    <menuitem name="gestion_hopital" id="gestion_hopital.menu_root"/>
   
    <!-- menu categories -->
    
    <menuitem name="Menu 1" id="gestion_hopital.menu_1" parent="gestion_hopital.menu_root"/>
    <menuitem name="Menu 2" id="gestion_hopital.menu_2" parent="gestion_hopital.menu_root"/>
   
    <!-- actions -->
    
    <menuitem name="List" id="gestion_hopital.menu_1_list" parent="gestion_hopital.menu_1"
              action="gestion_hopital.action_window"/>
    <menuitem name="Server to list" id="gestion_hopital" parent="gestion_hopital.menu_2"
              action="gestion_hopital.action_server"/>
   
  </data>
</odoo>