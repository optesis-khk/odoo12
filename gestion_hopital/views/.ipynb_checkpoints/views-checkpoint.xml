    <!-- Top menu item -->
    
    <menuitem name="gestion_hopital" id="gestion_hopital.menu_root"/>
   
    <!-- menu categories -->
    
    <menuitem name="Patiens" id="gestion_hopital.menu_patient" parent="gestion_hopital.menu_root" action="gestion_hopital.patient_action_window"/>
    <menuitem name="Medecin" id="gestion_hopital.menu_medecin" parent="gestion_hopital.menu_root" action="gestion_hopital.medecin_action_window"/>
    <menuitem name="Configurations" id="gestion_hopital.menu_configuration" parent="gestion_hopital.menu_root"/>
<!--     <menuitem name="Menu 2" id="gestion_hopital.menu_2" parent="gestion_hopital.menu_root"/> -->
   
    <!-- actions -->
    
    <menuitem name="Grades" id="gestion_hopital.menu_grade" parent="gestion_hopital.menu_configuration"
              action="gestion_hopital.grade_action_window"/>
    <menuitem name="Specialites" id="gestion_hopital.menu_specialite" parent="gestion_hopital.menu_configuration"
              action="gestion_hopital.specialite_action_window"/>
      
